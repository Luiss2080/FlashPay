{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend (Node.js)",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "build"
      },
      "problemMatcher": [],
      "detail": "Inicia el servidor Node.js en el puerto 3001."
    },
    {
      "label": "Launch Frontend (Expo)",
      "type": "shell",
      "windows": {
        "command": "npx expo start"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "build"
      }
    },
    {
      "label": "Run FlashPay Project",
      "dependsOn": ["Start Backend (Node.js)", "Launch Frontend (Expo)"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
