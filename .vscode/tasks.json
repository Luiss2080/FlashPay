{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Launch Backend (Browser)",
      "type": "shell",
      "windows": {
        "command": "powershell -Command \"Start-Process 'http://localhost/FlashPay/api/test.php'; Write-Host 'Backend verificado.'; Read-Host 'Presiona Enter para cerrar...'\""
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "build"
      }
    },
    {
      "label": "Launch Frontend (Expo)",
      "type": "shell",
      "windows": {
        "command": "npm start"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "build"
      }
    },
    {
      "label": "Run FlashPay Project",
      "dependsOn": ["Launch Backend (Browser)", "Launch Frontend (Expo)"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
